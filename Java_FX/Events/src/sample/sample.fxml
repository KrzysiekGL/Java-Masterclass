<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="textField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handleKeyReleased"/>

    <Button fx:id="helloButton" text="Say Hello" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#onButtonClicked" />

    <Button fx:id="secondButton" text="Second Button" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onButtonClicked" />

    <CheckBox fx:id="clearText" text="Clear the field after saying hello or pressing Second Button" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" onAction="#handleChange"/>

</GridPane>